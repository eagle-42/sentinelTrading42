# Configuration Sentinel2 - Variables d'environnement requises
# Copiez ce fichier vers .env et remplissez vos clés API

# =============================================================================
# CLÉS API REQUISES
# =============================================================================

# Polygon API (pour données historiques 15min)
POLYGON_API_KEY=YOUR_POLYGON_API_KEY

# NewsAPI (pour articles de news)
NEWSAPI_KEY=YOUR_NEWSAPI_KEY

# =============================================================================
# CONFIGURATION FINBERT / DISTILBERT
# =============================================================================

# Mode FinBERT (stub pour tests, real pour production)
FINBERT_MODE=stub

# Mode DistilBERT (stub pour tests, real pour production)
DISTILBERT_MODE=stub

# Timeout en millisecondes pour FinBERT/DistilBERT
FINBERT_TIMEOUT_MS=20000
DISTILBERT_TIMEOUT_MS=20000

# =============================================================================
# CONFIGURATION NEWS
# =============================================================================

# Intervalle de traitement des news (en secondes)
NEWS_FLOW_INTERVAL=300

# Feeds RSS (séparés par des virgules)
NEWS_FEEDS="https://www.investing.com/rss/news_25.rss,https://seekingalpha.com/feed.xml,https://feeds.bloomberg.com/markets/news.rss"

# Configuration NewsAPI
NEWSAPI_ENABLED=false
NEWSAPI_LANGUAGE=en
NEWSAPI_COUNTRY=us
NEWSAPI_SOURCES="reuters,bloomberg,associated-press,cnbc"

# Limites NewsAPI
NEWSAPI_DAILY_LIMIT=1000
NEWSAPI_MAX_REQUESTS=1000

# Rétention des données (en heures)
DATA_RETENTION_HOURS=4

# =============================================================================
# CONFIGURATION TRADING
# =============================================================================

# Tickers à surveiller (format: TICKER:Nom,TICKER:Nom)
TICKERS="NVDA:Nvidia,SPY:S&P 500 ETF"

# Mots-clés pour détection de tickers (séparés par des virgules)
NVDA_KEYWORDS="NVIDIA,NVDA,nvidia,nvdia,gpu,ai,artificial intelligence,cuda,tensor"
SPY_KEYWORDS="S&P 500,SPY,S&P500,S&P-500,market,stocks,equity,index,stock market,equity market,wall street,dow jones,nasdaq,broad market,market index,us market,american market,stock index,market benchmark,market performance,market sentiment,market outlook,market analysis,market trends,market volatility,market rally,market decline,market correction,bull market,bear market,market cap,market capitalization,sector performance,market sector,financial market,securities market"

# Intervalle de prix (1m, 5m, 15m, 1h, 1d)
PRICE_INTERVAL=1m

# Période de données (1d, 5d, 1mo, 3mo, 6mo, 1y, 2y, 5y, 10y, ytd, max)
PRICE_PERIOD=1d

# =============================================================================
# CONFIGURATION FUSION ADAPTATIVE
# =============================================================================

# Mode de fusion (fixed ou adaptive)
FUSION_MODE=fixed

# Sensibilité à la volatilité
FUSION_VOLATILITY_SENSITIVITY=0.2

# =============================================================================
# CONFIGURATION SENTIMENT
# =============================================================================

# Fenêtre d'agrégation du sentiment (en minutes)
SENTIMENT_WINDOW_MINUTES=12

# Méthode d'agrégation (mean, median, weighted)
SENTIMENT_AGGREGATION_METHOD=mean

# =============================================================================
# CONFIGURATION PRÉDICTEUR DE PRIX
# =============================================================================

# Chemin vers les modèles LSTM
PRICE_PREDICTOR_MODEL_PATH=data/trading/predictions

# Version du modèle (latest ou numéro spécifique)
PRICE_PREDICTOR_VERSION=latest

# =============================================================================
# CONFIGURATION MOTS-CLÉS TICKERS
# =============================================================================

# Mots-clés pour détection NVDA
NVDA_KEYWORDS="\bNVIDIA\b,\bNVDA\b"

# Mots-clés pour détection SPY
SPY_KEYWORDS="\bS&P\s*500\b,\bSPY\b,\bS&P500\b,\bmarket\b,\bstocks\b,\bequity\b,\bindex\b"

# =============================================================================
# CONFIGURATION CRAWLER HISTORIQUE
# =============================================================================

# Provider principal (polygon, yahoo)
PROVIDER=polygon

# Chemin vers les données Parquet
PARQUET_PATH=data/dataset/crawler/prices_1h.parquet

# Chemin vers l'état du crawler
STATE_PATH=data/dataset/crawler/historical_crawler_state.json

# Limites de requêtes
REQUESTS_PER_MINUTE=60
RETRY_MAX=3
RETRY_BACKOFF_SECONDS=2

# =============================================================================
# CONFIGURATION DE TEST
# =============================================================================

# Tickers pour les tests
TEST_TICKERS=SPY,NVDA
